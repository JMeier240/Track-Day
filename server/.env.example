PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# Database Configuration
# For development, you can use a local PostgreSQL instance
# or a free tier from services like ElephantSQL, Supabase, or Neon
DATABASE_URL=postgresql://username:password@localhost:5432/trackday

# JWT Secret (change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# Email Configuration (for magic link authentication)
EMAIL_FROM=noreply@trackday.racing

# Frontend URL (for magic link redirects)
FRONTEND_URL=http://localhost:5500
